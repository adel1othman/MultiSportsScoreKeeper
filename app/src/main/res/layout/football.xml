    <TextView
        android:id="@+id/teamARslt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoLay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/dp88"
        android:layout_marginLeft="@dimen/dp88"
        android:text="@string/zero"
        android:textSize="@dimen/sp40"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/teamBRslt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoLay"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp95"
        android:layout_marginRight="@dimen/dp95"
        android:text="@string/zero"
        android:textSize="@dimen/sp40"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/goalsLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/teamARslt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp95">

        <ImageView
            android:id="@+id/teamAGoal"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/goal"
            android:layout_marginEnd="@dimen/dp60"
            android:layout_marginRight="@dimen/dp60"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/teamBGoal"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/goal"
            android:layout_marginStart="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp60"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctrlBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pauseBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pause"/>

        <Button
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset"/>
    </LinearLayout>
</RelativeLayout>