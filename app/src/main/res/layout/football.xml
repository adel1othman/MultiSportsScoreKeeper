<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/footLayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/football"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp10"/>

    <LinearLayout
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp10">

        <TextView
            android:id="@+id/half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/half"
            android:textColor="@color/myOrange"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myOrange"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/logoLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_marginBottom="@dimen/dp10">

        <TextView
            android:id="@+id/syrTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/syr"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/syrLogo"
            android:layout_width="@dimen/dp75"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/syrTxt"
            android:layout_toEndOf="@+id/syrTxt"
            android:src="@drawable/syria"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="wrap_content"
            android:src="@drawable/vs"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/croLogo"
            android:layout_width="@dimen/dp84"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/croTxt"
            android:layout_toStartOf="@+id/croTxt"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/croatia" />

        <TextView
            android:id="@+id/croTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/cro"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

